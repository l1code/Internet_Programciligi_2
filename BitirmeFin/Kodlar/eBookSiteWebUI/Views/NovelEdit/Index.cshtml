@model IEnumerable<eBookSiteWebUI.Entity.Novel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container pb-5">
    <h2>Kitap Listesi</h2>
    <hr />
    <p>
        @Html.ActionLink("Yeni Kitap Ekle", "Create",null,new {@class="btn btn-primary" })
    </p>
    <table class="table  table-bordered table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.isHome)
            </th>
            <th width="200px">
                <p>İşlemler</p>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                   <img src="~/Upload/@item.Image" width="70px" />
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Genre.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>

                <td>
                    @if (item.isHome)
                    {
                        <label class="badge badge-primary">
                            <i class="fas fa-check-square" style="font-size: 15px;"></i>
                            Evet
                        </label>
                    }
                    else
                    {
                        <label class="badge badge-danger">
                            <i class="fas fa-check-square" style="font-size: 15px;"></i>
                            Hayır
                        </label>
                    }
                </td>
                <td>
                    @Html.ActionLink("Güncelle", "Edit", new { id = item.Id }, new { @class = "btn btn-primary " }) 
                    @Html.ActionLink("Silme", "Delete", new { id = item.Id }, new { @class = "btn btn-danger " })
                </td>
            </tr>
        }

    </table>
</div>