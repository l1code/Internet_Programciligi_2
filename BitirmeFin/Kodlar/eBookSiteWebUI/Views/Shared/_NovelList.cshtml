@using eBookSiteWebUI.Models;
@model IEnumerable<NovelsModel>
<div class="row">


    @foreach (var novel in Model)
    {
        <div class="col-md-4 mb-5">
            <div class="card">
                <div class="row">
                    <div class="col-md-4">
                        <img class="card-img-top img-fluid " src="/Upload/@novel.Image" alt="@novel.Name">
                    </div> 
                    
                    <div class="col-md-8 pl-0">
                        <div class="card-body ">
                            <h5 class="card-title">
                                <a href="/Novel/Details/@novel.Id"> @novel.Name</a>
                            </h5>
                            <p class="card-text description">@novel.Summary</p>
                        </div>
                    </div>
                </div>
                
               
                <div class="card-footer">
                    <small class="text-muted">@novel.Status</small>
                </div>
            </div>
        </div>
    }

</div>
