

@using eBookSiteWebUI.Models;
@model IEnumerable<NovelsModel>
@{
    ViewBag.Title = "Index";
}
<div class=" container">

    

    <div class="row">
        <div class="col-md-3">
            @Html.Action("GetGenres", "Novel")
        </div>

        <div class="col-md-9">
            @if (Model.Count() == 0)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-circle"></i>
                    Bu kategoride kitap bulunamadı.
                </div>
            }
            else
            {
                <div class="alert alert-secondary" role="alert">
                    
                    <strong>@Model.Count() adet </strong>  kitap bulundu.
                </div>
            }

            @Html.Partial("_NovelList", Model)
        </div>

    </div>

</div>
